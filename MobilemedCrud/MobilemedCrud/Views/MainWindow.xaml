<Window x:Class="MobilemedCrud.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:core="clr-namespace:MobilemedCrud.Core;assembly=MobilemedCrud.Core"
        Title="{Binding Title}" Height="350" Width="525" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="Black">
            <StackPanel>
                <Button Width="150" Height="50" Content="Cadastro de Paciente" Command="{Binding Navigate}" CommandParameter="{x:Static core:NavigationRoutes.PatientRegistry}"   />
                <Button Width="150" Height="50" Content="Cadastro de Medico"   Command="{Binding Navigate}" CommandParameter="{x:Static core:NavigationRoutes.MedicRegistry}"  />
                <Button Width="150" Height="50" Content="Cadastro de Consulta" Command="{Binding Navigate}" CommandParameter="{x:Static core:NavigationRoutes.BookmarkRegistry}"  />
            </StackPanel>
        </Grid>
        <ContentControl Grid.Column="1" prism:RegionManager.RegionName="{x:Static core:RegionNames.ContentRegion}" />
    </Grid>
</Window>
