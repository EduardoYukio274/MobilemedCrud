<UserControl 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="MobilemedCrud.Registry.Views.PatientSearch"            
             prism:ViewModelLocator.AutoWireViewModel="True" Height="436" Width="718">

    <Grid Background="Blue">
        <Grid>
            <DataGrid ItemsSource="{Binding PatientModels}" SelectionChanged="DataGrid_SelectionChanged" Margin="0,0,-3,0"/>
            <TextBox HorizontalAlignment="Left" Margin="151,115,0,0" TextWrapping="Wrap" Text="Id do Paciente:" VerticalAlignment="Top" Width="120"/>
            <TextBox HorizontalAlignment="Left" Margin="151,238,0,0" TextWrapping="Wrap" Text="Nome do Paciente:" VerticalAlignment="Top" Width="120"/>
            <Button Content="Procurar paciente pelo Id" HorizontalAlignment="Left" Margin="343,112,0,0" VerticalAlignment="Top"/>
            <Button Content="Procurar paciente pelo Nome" HorizontalAlignment="Left" Margin="343,234,0,0" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</UserControl>
